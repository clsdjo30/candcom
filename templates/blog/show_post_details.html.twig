{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

 {% block description %}
     <meta name="description" content="{{ post.title }}">
{% for tag in post.tags %}
     <meta name="keywords" content="{{ tag.name }}">
{% endfor %}
     <meta name="image" content="{{ post.postImage }}">
 {% endblock %}

{% block og %}
    <meta property="og:title" content="{{ post.title }}">
    <meta property="og:site_name" content="{{ post.title }}">
    <meta property="og:url" content="https://candcom.com/">
    <meta property="og:description" content="{{ post.shortDescription }}">
    <meta property="og:type" content="website">
    <meta name="og:locale" content="fr_FR">
    <meta property="og:image" content="{{ post.postImage }}">
{% endblock %}

{% block twitter %}
{% endblock %}


{% block body %}
    {% block content %}
        <div id="response-div">
            {{ include('partials/_blogNavbar.html.twig') }}
            <div class="container mx-auto pt-16 ">
                <div class="flex flex-col md:flex-row w-full">
                    {# Start of search aside #}
                    {% block search %}
                        {{ include('partials/_blog-search-block.html.twig') }}
                    {% endblock %}
                    {# End of search aside #}
                    {% block posts %}
                        {{ include('partials/_post-article.html.twig') }}
                    {% endblock %}

                </div>
            </div>
            {% block footer %}
                {{ include('partials/_footer.html.twig') }}
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}








