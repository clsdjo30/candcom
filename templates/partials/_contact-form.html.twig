            {# Start of Contact Form #}
            {{ form_start(form, {
                'attr': {
                    'class': 'flex flex-col place-content-center mx-auto p-8 form-control'
                }
            }) }}

            {# Display Token of Contact Form #}
            {{ form_widget(form._token) }}

            <div class="flex">
                {{ form_label(form.name, 'Nom',{
                    'label_attr': {
                        'class': 'text-neutral font-subtitle text-base lg:text-lg tracking-wider'
                    }
                }) }}
                <span class="text-red-700">*</span>
            </div>
            {{ form_widget(form.name, {
                'attr': {
                    'class': 'focus:outline-none focus:border focus:border-accent font-normal mb-2 rounded py-2 text-base outline-none resize-none px-3 border border-neutral'
                }
            }) }}
            <span class="text-error font-subtitle text-sm">
                {{ form_errors(form.name) }}
            </span>

            {# Email Adress of Contact Form #}
            <div class="flex">
                {{ form_label(form.email, 'Adresse email ', {
                    'label_attr': {
                        'class': 'text-neutral font-subtitle text-base lg:text-lg tracking-wider'
                    }
                }) }}
                <span class="text-red-700">*</span>
            </div>
            {{ form_widget(form.email, {
                'attr': {
                    'class': ' focus:outline-none focus:border focus:border-accent font-normal mb-2 rounded py-2 text-base outline-none resize-none px-3 border border-neutral'
                },
            }) }}
            <span class="text-error font-subtitle text-sm">
                {{ form_errors(form.email) }}
            </span>


            {# Message of Contact Form #}
            <div class="flex">
                {{ form_label(form.message, 'Message', {
                    'label_attr': {
                        'class': 'text-neutral font-subtitle text-base lg:text-lg tracking-wide'
                    },
                }) }}
                <span class="text-red-700">*</span>
            </div>
            {{ form_widget(form.message, {
                'attr': {
                    'class': 'focus:outline-none focus:border focus:border-accent font-normal mb-2 rounded py-2 text-base outline-none px-3 border border-neutral'
                },
            }) }}
            <span class="text-error font-subtitle text-sm">
                {{ form_errors(form.message) }}
            </span>

            <div class="flex justify-start place-items-center -mt-1">
                {# Privacy Policy of Contact Form #}
                {{ form_widget(form.isAgree, {
                    'attr': {
                        'class': 'checkbox checkbox-sm checkbox-accent mr-3'
                    },
                }) }}
                <div class="flex">
                    {{ form_label(form.isAgree, 'Accepter la politique de confidentialité', {
                        'label_attr': {
                            'class': 'cursor-pointer label text-neutral font-subtitle text-base lg:text-lg tracking-wide'
                        },
                    }) }}
                    <span class="text-red-700">*</span>
                </div>
            </div>
            <input type="hidden" name="token" value="{{ csrf_token('_token') }}"/>
            <div class="block w-full mt-3">
                <button class="w-full p-2 border border-primary rounded text-base lg:text-lg text-secondary hover:border-secondary hover:text-base hover:bg-accent capitalize hover:transition hover:duration-150 hover:ease-in">
                    Envoyez
                </button>
            </div>
            {{ form_end(form, {'render_rest': false}) }}
